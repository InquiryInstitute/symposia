<style>
  @import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Scheherazade+New:wght@400;500;600;700&display=swap');

  .iran-theme {
    --lapis-deep: #1a3a5c;
    --lapis: #234b6e;
    --turquoise: #1abc9c;
    --gold: #d4af37;
    --gold-light: #e6c55a;
    --rose: #c94c4c;
    --cream: #faf8f5;
    --parchment: #f5f0e6;
    --ink: #1a1a1a;
    
    background: var(--cream);
  }

  .hero {
    background: linear-gradient(135deg, var(--lapis-deep) 0%, var(--lapis) 100%);
    color: var(--cream);
    padding: var(--space-8) 0;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23d4af37' fill-opacity='0.08'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.6;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero h1 {
    font-size: 2.5rem;
    font-weight: 300;
    margin-bottom: var(--space-2);
    letter-spacing: 0.05em;
  }

  .hero-persian {
    font-family: 'Scheherazade New', 'Vazirmatn', serif;
    font-size: 2.5rem;
    direction: rtl;
    color: var(--gold);
    margin-bottom: var(--space-2) !important;
  }

  .hero-subtitle {
    font-style: italic;
    opacity: 0.9;
    font-size: 1.1rem;
    margin-bottom: var(--space-4) !important;
  }

  .hero-ornament {
    color: var(--gold);
    letter-spacing: 0.5rem;
    font-size: 1.2rem;
  }

  .overview {
    padding: var(--space-7) var(--space-4);
  }

  .lead {
    font-size: 1.15rem;
    line-height: 1.8;
  }

  .question-block {
    background: var(--parchment);
    border: none;
    border-left: 4px solid var(--gold);
    padding: var(--space-5);
    margin: var(--space-5) 0;
    text-align: center;
  }

  .question-persian {
    font-family: 'Scheherazade New', serif;
    font-size: 1.8rem;
    direction: rtl;
    color: var(--lapis);
    margin-bottom: var(--space-2) !important;
  }

  .question-english {
    font-style: italic;
    font-size: 1.2rem;
    margin-bottom: var(--space-2) !important;
  }

  .question-sub {
    color: var(--color-text-muted);
    font-size: 1rem;
    margin-bottom: 0 !important;
  }

  .hero-format {
    font-size: 0.9rem;
    color: var(--gold-light);
    margin-top: var(--space-3);
    opacity: 0.9;
  }

  .speakers {
    padding: var(--space-6) var(--space-4);
  }

  .speakers h2 {
    margin-bottom: var(--space-2);
  }

  .speakers-subtitle {
    text-align: center;
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: var(--space-5) !important;
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
  }

  .speaker-card {
    background: white;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    border-left: 4px solid var(--gold);
    position: relative;
  }

  .speaker-card.special {
    border-left-color: var(--rose);
    background: linear-gradient(to right, rgba(201, 76, 76, 0.05), transparent);
  }

  /* Heretic Section */
  .heretic-section {
    margin-top: var(--space-6);
    text-align: center;
  }

  .heretic-label {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--rose);
    margin-bottom: var(--space-3) !important;
  }

  .speaker-card.heretic {
    max-width: 400px;
    margin: 0 auto;
    border-left-color: var(--rose);
    background: linear-gradient(to right, rgba(201, 76, 76, 0.08), transparent);
    border: 2px solid var(--rose);
  }

  .speaker-icon {
    font-size: 1.5rem;
    margin-bottom: var(--space-2);
  }

  .speaker-card h3 {
    margin-bottom: var(--space-1);
    font-size: 1.3rem;
  }

  .speaker-persian {
    font-family: 'Scheherazade New', serif;
    font-size: 1.4rem;
    direction: rtl;
    color: var(--lapis);
    margin-bottom: var(--space-1) !important;
  }

  .speaker-title {
    font-style: italic;
    color: var(--color-text-muted);
    margin-bottom: var(--space-1) !important;
  }

  .speaker-dates {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-3) !important;
  }

  .speaker-contribution {
    font-size: 0.9rem;
    background: var(--parchment);
    padding: var(--space-2);
    margin-bottom: 0 !important;
  }

  .themes {
    padding: var(--space-6) var(--space-4);
    background: var(--parchment);
  }

  .themes h2 {
    margin-bottom: var(--space-4);
  }

  .themes-list {
    list-style: decimal;
    padding-left: var(--space-4);
  }

  .themes-list li {
    margin-bottom: var(--space-3);
    padding-left: var(--space-2);
  }

  .sessions {
    padding: var(--space-6) var(--space-4);
  }

  .sessions h2 {
    margin-bottom: var(--space-5);
  }

  .sessions-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .session-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    background: white;
    padding: var(--space-4);
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .session-card:not(.planned):hover {
    transform: translateX(8px);
    box-shadow: -4px 4px 0 var(--gold);
  }

  .session-card.planned {
    opacity: 0.7;
    cursor: default;
  }

  .session-number {
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--gold);
    min-width: 50px;
  }

  .session-info h3 {
    margin-bottom: var(--space-1);
    font-size: 1.1rem;
  }

  .session-info p {
    margin-bottom: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .session-status {
    margin-left: auto;
    font-size: 0.8rem;
    padding: var(--space-1) var(--space-2);
    border-radius: 2px;
    background: var(--lapis);
    color: white;
  }

  .session-status.available {
    background: var(--turquoise);
    color: white;
  }

  .session-status.draft {
    background: var(--gold);
    color: var(--ink);
  }

  .closing {
    padding: var(--space-7) var(--space-4);
    text-align: center;
  }

  .verse-block {
    max-width: 500px;
    margin: 0 auto;
  }

  .verse-persian {
    font-family: 'Scheherazade New', serif;
    font-size: 1.5rem;
    direction: rtl;
    color: var(--lapis);
    margin-bottom: var(--space-1) !important;
  }

  .verse-english {
    font-style: italic;
    color: var(--color-text-muted);
    margin-bottom: var(--space-1) !important;
  }

  .verse-attribution {
    margin-top: var(--space-3);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 1.8rem;
    }

    .hero-persian {
      font-size: 1.8rem;
    }

    .session-card {
      flex-wrap: wrap;
    }

    .session-status {
      margin-left: 0;
      margin-top: var(--space-2);
    }
  }
</style>
