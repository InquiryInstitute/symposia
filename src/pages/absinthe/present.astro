---
import BaseLayout from '../../layouts/BaseLayout.astro';
const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Symposion of the Green Fairy - Interactive Presentation" description="Watch the Absinthe symposium with AI-generated voices, animated busts, and real-time subtitles">
  <div class="present-container">
    <div class="present-header">
      <a href={`${base}/absinthe/`} class="back-link">‚Üê Back to Symposium</a>
      <h1>Symposion of the Green Fairy</h1>
      <p class="present-subtitle">Interactive Presentation</p>
    </div>
    
    <div class="present-embed">
      <iframe
        src="https://inquiry.institute/symposia/absinthe/present"
        title="Absinthe Symposium Interactive Presentation"
        class="present-iframe"
        allow="microphone; camera; autoplay"
        loading="lazy"
      ></iframe>
    </div>
    
    <div class="present-fallback">
      <p>If the presentation doesn't load, <a href="https://inquiry.institute/symposia/absinthe/present" target="_blank" rel="noopener noreferrer">open it in a new window</a>.</p>
    </div>
  </div>
</BaseLayout>

<style>
  .present-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    background: var(--absinthe-parchment, #faf8f5);
  }

  .present-header {
    padding: var(--space-4) var(--space-4) var(--space-2);
    background: linear-gradient(135deg, var(--absinthe-dark, #2d5016) 0%, var(--absinthe-green, #7fb069) 100%);
    color: var(--absinthe-cream, #f5f0e6);
  }

  .back-link {
    display: inline-block;
    color: var(--absinthe-gold, #d4af37);
    text-decoration: none;
    margin-bottom: var(--space-3);
    font-size: 0.9rem;
    transition: opacity 0.2s;
  }

  .back-link:hover {
    opacity: 0.8;
  }

  .present-header h1 {
    font-family: 'Cinzel', serif;
    font-size: 2rem;
    margin-bottom: var(--space-1);
    color: var(--absinthe-cream, #f5f0e6);
  }

  .present-subtitle {
    font-style: italic;
    opacity: 0.9;
    margin-bottom: 0;
  }

  .present-embed {
    flex: 1;
    position: relative;
    width: 100%;
    min-height: calc(100vh - 200px);
  }

  .present-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
    background: white;
  }

  .present-fallback {
    padding: var(--space-3) var(--space-4);
    text-align: center;
    background: var(--absinthe-cream, #f5f0e6);
    border-top: 1px solid var(--absinthe-green, #7fb069);
  }

  .present-fallback a {
    color: var(--absinthe-green, #7fb069);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .present-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
