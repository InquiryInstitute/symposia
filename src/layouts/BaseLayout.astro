---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Imagined dialogues between history's great minds" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Symposia</title>
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`}>
  <link rel="stylesheet" href={`${base}styles/global.css`}>
</head>
<body>
  <nav class="site-nav">
    <div class="container-wide site-nav-inner">
      <a href={base} class="site-logo">SYMPOSIA</a>
      <ul class="site-nav-links">
        <li><a href={base}>Home</a></li>
        <li><a href={`${base}about`}>About</a></li>
        <li><a href="https://inquiry.institute" target="_blank">Inquiry Institute</a></li>
      </ul>
    </div>
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer class="site-footer">
    <div class="container">
      <p>An <a href="https://inquiry.institute">Inquiry Institute</a> Project</p>
      <p class="text-muted" style="margin-top: 0.5rem; font-size: 0.85rem;">
        Licensed under <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank">CC BY-NC-SA 4.0</a>
      </p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500&display=swap');

  :root {
    --color-bg: #fafafa;
    --color-bg-alt: #f0f0f0;
    --color-surface: #ffffff;
    --color-text: #1a1a1a;
    --color-text-muted: #666666;
    --color-accent: #2563eb;
    --color-accent-hover: #1d4ed8;
    --color-border: #e5e5e5;
    
    --font-serif: 'Cormorant Garamond', 'Georgia', serif;
    --font-mono: 'JetBrains Mono', monospace;
    
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 1rem;
    --space-4: 1.5rem;
    --space-5: 2rem;
    --space-6: 3rem;
    --space-7: 4rem;
    --space-8: 6rem;
    
    --max-width: 800px;
    --max-width-wide: 1100px;
  }

  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-size: 18px;
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-serif);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.7;
    min-height: 100vh;
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3, h4 {
    font-weight: 500;
    line-height: 1.3;
    margin-bottom: var(--space-3);
  }

  h1 { font-size: 2.5rem; font-weight: 300; }
  h2 { font-size: 1.75rem; }
  h3 { font-size: 1.25rem; }

  p { margin-bottom: var(--space-3); }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s;
  }
  a:hover { color: var(--color-accent-hover); }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .container-wide {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .site-nav {
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-3) 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .site-nav-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-logo {
    font-size: 1.25rem;
    font-weight: 400;
    color: var(--color-text);
    letter-spacing: 0.15em;
  }

  .site-nav-links {
    display: flex;
    gap: var(--space-4);
    list-style: none;
  }

  .site-nav-links a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  .site-nav-links a:hover {
    color: var(--color-text);
  }

  .site-footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-6) 0;
    margin-top: var(--space-8);
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .text-center { text-align: center; }
  .text-muted { color: var(--color-text-muted); }

  @media (max-width: 768px) {
    html { font-size: 16px; }
    h1 { font-size: 2rem; }
    .site-nav-links { display: none; }
  }
</style>
