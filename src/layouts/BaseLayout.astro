---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Imagined dialogues between history's great minds" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Symposia</title>
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`}>
</head>
<body>
  <nav class="site-nav">
    <div class="container-wide site-nav-inner">
      <a href={base} class="site-logo">SYMPOSIA</a>
      <ul class="site-nav-links">
        <li><a href={base}>Home</a></li>
        <li><a href={`${base}about`}>About</a></li>
        <li><a href="https://inquiry.institute" target="_blank">Inquiry Institute</a></li>
      </ul>
    </div>
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer class="site-footer">
    <div class="container">
      <p>An <a href="https://inquiry.institute">Inquiry Institute</a> Project</p>
      <p class="text-muted" style="margin-top: 0.5rem; font-size: 0.85rem;">
        Licensed under <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank">CC BY-NC-SA 4.0</a>
      </p>
    </div>
  </footer>
</body>
</html>
